@{
    ViewBag.Title = "Cadastrar Partida";
}

<section id="partidaApp" class="content">

    <div class="row" style="max-height:280px;overflow:auto;">
        <div v-for="lutador in Lutadores" class="cardRival" :style="{margin: '5px', border: '3px solid', borderColor: lutador.Nome === LutadorCasa.Nome ? '#2b8bc8' : lutador.Nome === LutadorVisitante.Nome ? '#FF4773' :'white'}" v-on:click.prevent="selecionarLutador(lutador)">
            <div style="text-transform:uppercase;font-weight:600;display:flex;flex-direction:column">
                <div style="display: flex; align-items: center; justify-content:space-between;margin-bottom:2px">
                    <img :src="lutador.Portrait" style="width:48px;height:48px;border-radius:50%" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <div class="cards" style="display:block" v-if="LutadorCasa">
                <div class="card" style="width: 100%; margin: 5px 0px; transform: scaleX(1)">
                    <div class="content">
                        <div class="details">
                            <div class="name">{{LutadorCasa.Nome}}</div>
                        </div>
                        <img :src="LutadorCasa.Universo" style="width:40%;height:100px;object-fit:contain;margin:5px" />
                        <div class="img">
                            <img :src="LutadorCasa.Stand" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4" style="display:flex;align-items:center;justify-content:center">
            <div v-if="LutadorCasa && LutadorVisitante" class="versus" style="height:30%;cursor:pointer" v-on:click.prevent="iniciarPartida()">
                <img src="../Imagens/Versus.png" style="object-fit:contain;width:100%;height:100%" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="cards" style="display:block" v-if="LutadorVisitante">
                <div class="card" style="width:100%; margin:5px 0px ; transform:scaleX(-1)">
                    <div class="content">
                        <div class="details" style="transform:scaleX(-1)">
                            <div class="name">{{LutadorVisitante.Nome}}</div>
                        </div>
                        <img :src="LutadorVisitante.Universo" style="width: 40%; height: 100px; object-fit: contain; margin: 5px; transform: scaleX(-1)" />
                        <div class="img">
                            <img :src="LutadorVisitante.Stand" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<script src="https://unpkg.com/vue-multiselect@2.1.6"></script>
<link rel="stylesheet" href="~/Content/css/Lutador.css">

<script src="~/Content/js/Views/Partida/Index.js"></script>